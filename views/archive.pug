extends layout

block content

  div(class="container")
    div(class="row" id="intro")
      div(class="col")
        h2 SomeNano Words Game Archive
        p Below you will find the 100 most recent completed games.

    div(class="row")
      div(class="col")
        table(class="table table-hover")
          thead
            tr
              th Game Date
              th Puzzle
          tbody
            each game in games
              tr
                td
                  a(href="/archive/"+game._id) #{game.date_created}
                td #{game.phrase}

